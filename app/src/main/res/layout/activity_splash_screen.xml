<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.diovae.berend.layout_legend.splash_screen">

    <ImageView
        android:id="@+id/DiovaeLogo"
        android:layout_width="201dp"
        android:layout_height="290dp"
        app:srcCompat="@drawable/logo_diovae"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="96dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/DiovaeText"
        android:layout_marginRight="96dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintVertical_bias="0.8"
        tools:layout_editor_absoluteY="18dp"
        tools:layout_editor_absoluteX="90dp"
        android:contentDescription="the image of our logo" />

    <ImageView
        android:id="@+id/DiovaeText"
        android:layout_width="323dp"
        android:layout_height="202dp"
        app:srcCompat="@drawable/logo_diovae_tekst"
        android:layout_marginLeft="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="4dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        android:layout_marginBottom="32dp" />
</android.support.constraint.ConstraintLayout>

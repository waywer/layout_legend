<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.diovae.berend.layout_legend.splash_screen">

    <ImageView
        android:id="@+id/DiovaeLogo"
        android:layout_width="201dp"
        android:layout_height="290dp"
        app:srcCompat="@drawable/logo_diovae"
        android:contentDescription="the image of our logo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/DiovaeText"
        android:layout_marginRight="8dp"
        app:layout_constraintVertical_bias="0.509" />

    <ImageView
        android:id="@+id/DiovaeText"
        android:layout_width="323dp"
        android:layout_height="202dp"
        app:srcCompat="@drawable/logo_diovae_tekst"
        android:layout_marginRight="48dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="70dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp"
        app:layout_constraintVertical_bias="0.529" />
</android.support.constraint.ConstraintLayout>
